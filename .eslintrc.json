{
  "extends": ["react-app"],
  "rules": {
    "react/prop-types": "off",
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": "off",
    "no-unused-vars": "off",
    "no-undef": "error"
  },
  "overrides": [
    {
      "files": ["*.test.js", "*.test.jsx"],
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
